                        {% endif %}
                        </span>
                        <span class="way__pay">
{#                            {Картой онлайн/Наличными}#}
                            {% if order.methodPay === "cardOnline" %}
                                Картой онлайн
                            {% elseif order.methodPay === "cashOffline" %}
                                Наличными
                            {% endif %}
                        </span>
                    </div>
                </div>
                <div class="item-content">
                    <div class="item-block">
                        <div class="day-shipping">
                            Дата доставки: {дата}
                            {% if order.shipping === "selfDelivery" %}
                                Самовывоз
                            {% elseif order.shipping === "expressDelivery" %}
                                Доставка по адресу
                            {% endif %}
                        </div>
                        <div class="status-shipping">
                            {отменено, получено, доставка}

                        </div>
