{% extends "../layout.njk" %}

{% block preStylesheet %}
    <link href="/css/catalog.min.css" rel="stylesheet">
    <link href="/css/cart.min.css" rel="stylesheet">
{% endblock %}

 {% block preScript %}
     <script src="/scripts/addProductToCart.js"></script>
{#     <script src="/scripts/cartCalculate.js"></script>#}
     <script src="/scripts/inputQuantity.js"></script>
 {% endblock %}

{% block content %}
    <div class="main__content">
        <!--   breadcrumb -->

        <div class="container shadow">
            <div class="breadcrumb_1">
                <ul class="breadcrumb-path">
                    <li><a href="/">Главная</a></li>
                    <li><a href="/catalog/">Каталог</a></li>
                    <li class="active">{{ category.name }}</li>
                </ul>
            </div>
            <!--   catalog container -->
            <div class="catalog">
                <div class="catalog__category">
                    <span class="empty"> </span>

                    <span class="category-title">Популярные категории</span>
                    <ul>
                        <li><a href="#">Обложки</a></li>
                        <li><a href="#">Обложки</a></li>
                        <li><a href="#">Обложки</a></li>
                        <li><a href="#">Обложки</a></li>

                    </ul>


                </div>

                <div class="catalog__bar">
                    <h2>{{ category.name }}</h2>
                    {% for product in products %}
                        <div class="catalog__item">
                            <div class="item__img">
                                <img src=" {{ product.mURL }}">
                            </div>

                            <div class="item__info">
                                <div class="item__name">
                                    <a href="/catalog/item/{{ product.id }}">{{ product.name }}</a>
                                </div>
                                <div class="item__price-container">
                                    {% if product.quantity > 0 %}
                                    <div class="product-qty" data-th="Quantity">
                                        <button class="btnMinus" data-id="{{ product.id }}" onclick="decreaseValue(this.dataset.id)">-</button>
                                        <input type="number" id="input{{ product.id }}" data-id="{{ product.id }}"
 class="quantityProduct " value="{{ product.quantity }}" min="0" onchange="quantityInput(this.dataset.id)">
                                        <button class="btnPlus" data-id="{{ product.id }}" onclick="increaseValue(this.dataset.id)">+</button>
                                    </div>
                                    {% else %}
                                        <a class="item__to-basket" id="btn{{ product.id }}" data-id="{{ product.id }}"
                                           type='button' title="Положить в корзину" onclick="requestAndElemSwap(this.dataset.id)">

                                            В корзину
                                        </a>
                                    {% endif %}
                                    <div class="item__price">
                                        <span class="price">{{ product.sellingPrice | addPennies  }} </span>
                                    </div>
                                </div>

                                <div class="item__other-info">
                                    <p>В наличии {{ product.stock }} шт</p>
                                    <p>Доставка сегодня</p>
                                </div>
                            </div>

                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>


{% endblock %}


