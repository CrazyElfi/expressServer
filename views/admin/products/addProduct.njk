{% extends "../../layout.njk" %}

 {% block script %} <script src="/scripts/post.js"></script> {% endblock %}

 {% block content %}

     <nav aria-label="breadcrumb">
         <ol class="breadcrumb">
             <li class="breadcrumb-item"><a href="/">Home</a></li>
             <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
             <li class="breadcrumb-item"><a href="/admin/products">Products</a></li>
             <li class="breadcrumb-item active" aria-current="page">{{ editOrAdd }} product</li>
         </ol>
     </nav>

     <section class="loader">
         <div class="container">
             <div class="loader__inner">
                 <form id="myForm" enctype="multipart/form-data" method="post" action="/admin/products" >

                     <div class="form-group">
                         <label for="name">Name</label>
                         <input type="text" name="name" value="{{ product.name }}" required>
                     </div>
                     <div class="form-group">
                         <label for="price">Price</label>
                         <input type="text" name="price" value="{{ product.price }}" required>
                     </div>

                     <div class="form-group">
                         <label for="exampleFormControlTextarea1" for="description">Description</label>
                         <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" name="description" {{ product.descrtiption }}></textarea>
                     </div>

                     <div class="form-group">
                         <label for="exampleFormControlFile1">Example file input</label>
                         <input type="file" class="form-control-file" id="exampleFormControlFile1" name="mURL" size="45" {{ product.mURL }}>
                     </div>

                     <div class="col-md-5 mb-3">
                         <label for="category">Category</label>
                         <select name="category" class="custom-select d-block w-100 " id="country" required multiple>
                             <option> Выберите категории</option>
                             {%  for category in categories %}
                                 <option value="{{ category.id }}"> {{ category.id }} - {{ category.name }} {{ category.description }}</option>
                             {% endfor %}
                             {%  for category in product.Categories %}
                                 <option selected value="{{ category.id }}"> {{ category.id }} - {{ category.name }} {{ category.description }}</option>
                             {% endfor %}
                         </select>
                         <div class="select-arrow"></div>
                         <div class="invalid-feedback">
                             Please select a valid category.
                         </div>
                     </div>

{#                        use it for post request#}
{#                     <button class="btn btn-primary btn-lg btn-block" onclick="loadDoc()" type="button">load to server</button>#}
                     <button class="btn btn-primary btn-lg btn-block" type="submit">load to server</button>
                 </form>
             </div>
         </div>
     </section>



