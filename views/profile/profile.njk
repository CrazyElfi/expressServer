{% extends "./layout.njk" %}

{% block main_profile %}
    <input type="hidden" id="user-id" name="id" value="{{ user.id }}">

    <form class="panel-section" id="data-auth">
        <div class="title-inner">
            <h4 class="panel-title">Профиль пользователя</h4>
            <button class="profile-edit"  type="button" data-state="edit" data-url="user" data-section="data-auth"  onclick="edit (this)">
                <img src="/images/edit.svg">
                Изменить
            </button>
        </div>


        <div class="profile-info">
            <div class="info-descr">
                <span class="info-subtitle">
                    Телефон
                 </span>
                <span class="info-span" id="phone">{{ user.phone }}</span>
                <input class="info-input" name="phone" value="{{ user.phone }}" hidden>
            </div>
        </div>

        <div class="profile-info">
            <div class="info-descr">
                <span class="info-subtitle">
                    Почта
                 </span>
                <span class="info-span" id="email">{{ user.email }}</span>
                <input class="info-input" name="email" value="{{ user.email }}" hidden>
            </div>
        </div>
        <a class="btn btn-reset" href="/resetpassword/reset" type="button">Востановление пароля</a>

        <a class="profile-exit" href="/auth/logout">Выйти на этом устройстве</a>
    </form>

    <div class="panel-section"  id="data-personal">
        <div class="title-inner">
            <h4 class="panel-title">Личные данные</h4>
            <a
                    {#                    href="/profile/edit" #}
                    class="profile-edit" onclick="changeData (this)">
                <img src="/images/edit.svg">
                Изменить
            </a>
        </div>


        <div class="profile-info">
            <div class="info-descr">
                <span class="info-subtitle">
                    ФИО
                 </span>
                <span class="info">{{ user.lastname }} {{ user.username }}</span>
            </div>
        </div>
        <div class="profile-info">
            <div class="info-descr">
                <span class="info-subtitle">
                    Дата рождения
                 </span>
                <span class="info">Не указано</span>
            </div>
        </div>
        <div class="profile-info">
            <div class="info-descr">
                <span class="info-subtitle">
                    Пол
                 </span>
                <span class="info" id="info-gender">Мужской</span>

                <div class="row-gender" id="row-gender" >
                    <div class="form-gender" id="form-gender" onfocusout="collectData ()">
                        <label for="gender">Укажите пол: </label>
                        <input class="gender" type="radio" name="gender" value="MALE">Мужской<br>
                        <input class="gender" type="radio" name="gender" value="FEMALE"> Женский<br>
                        <input class="gender" type="radio" name="gender" value="OTHER" CHECKED> Другой
                    </div>
                </div>
            </div>

        </div>
{#        <a href="/profile/edit" class="profile-edit">Изменить личные данные</a>#}
    </div>


