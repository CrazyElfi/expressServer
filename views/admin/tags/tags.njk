{% extends "../adminLayout.njk" %}

{% block mbk %}
    <div class="col-10 mt-2 mb-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tags</li>
            </ol>
        </nav>

        <div class="alert alert-success  alert-dismissible fade show" role="alert">
            <h5 class="alert-heading">Тег успешно добавлен!</h5>
            <hr>
            <p class="mb-0">
                Тег загружен на сервер.
            </p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="d-flex">
            <table class="table">
                {% for tag in tags %}
                    <tr>
                        <td class="tableTd">{{ tag.id }}</td>
                        <td class="tableTd">{{ tag.name }}</td>
                        <td class="tableTd">{{ tag.description }}</td>
                    </tr>
                {% endfor %}
            </table>

