{% extends "layout.njk" %}

{% block stylesheet %}
    <link rel="stylesheet" href="/css/login&signup.min.css">
{% endblock %}

{% block preScript %}
    <script src="scripts/login.js"></script>
{% endblock %}

{% block content %}
    <div class="login">
        <div class="container">
            <form class="form-check width-v2" action="/login" method="post">
                <h2 class="form-title">Вход или регистрация </h2>
                <div class="form-main">
                    <div class="form-sidebar">

                        <a class="sidebar_list-row row-active" id="social-auth" href="#" data-content-id="form-content_social">
                            Социальные сети
                        </a>

                        <a class="sidebar_list-row" id="phone-auth" href="#" data-content-id="form-content_phone">
                            Телефон
                        </a>

                        <a class="sidebar_list-row" id="mail-auth" href="#" data-content-id="form-content_email">
                            Почта
                        </a>

                        <a class="sidebar_list-row" id="fast-auth" href="#" data-content-id="form-content_fast-auth">
                            Быстрая регистрация
                        </a>

                    </div>

                    <div class="form-content" id="form-content">
                        {# Social#}
                        <div class="form-content_social customForm active-content" id="form-content_social">
                            <div class="social-row">
                                <a class="social__item" href="#">
                                    <img src="/images/social/icon-google.svg">
                                </a>

                                <a class="social__item" href="#">
                                    <img src="/images/social/icon-vk.svg">
                                </a>

                                <a class="social__item" href="#">
                                    <img src="/images/social/icon-fb.svg">
                                </a>
                            </div>

                            <div class="social-row">
                                <a class="social__item" href="#">
                                    <img src="/images/social/icon-tw.svg">
                                </a>

                                <a class="social__item" href="#">
                                    <img src="/images/social/icon-odnoklassniki.svg">
                                </a>
                                <a class="social__item" href="#">
                                    <img src="/images/social/icon-ya.svg">
                                </a>
                            </div>
                        </div>


                        {# Phone#}
                        <div class="form-content_phone  customForm inactive-content" id="form-content_phone">
                            <input class="input-field phone" type="text" name="phone" placeholder="+ 7 "/>

                            <a class="btn btn-auth">
                                Получить код
                            </a>
                        </div>

                        {# Email#}
                        <div class="form-content_email customForm inactive-content" id="form-content_email">
                            <input class="input-field email" type="text" name="email" placeholder="Почта"/>
                            <input class="input-field password" type="password" name="password" placeholder="Пароль"/>
                            <a class="btn btn-auth">
                                Зарегистрироваться
                            </a>
                        </div>

                        {# Fast-auth#}
                        <div class="form-content_fast-auth customForm inactive-content" id="form-content_fast-auth">
                            <div class="auth-text">
                                <h3>
                                    Добро пожаловать!
                                </h3>
                                <p>
                                    Вы находитесь во вкладке быстрой регистрации.
                                </p>
                                <p>В случае регистрации логин и пароль от учетной
                                    <br> записи
                                    Вы сможете найти в Личном кабинете.</p>
                            </div>
                            <a class="btn btn-auth">
                                Зарегистрироваться
                            </a>
                        </div>

                    </div>

                </div>

            </form>
        </div>
    </div>

{% endblock %}
