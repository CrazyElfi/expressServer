{% extends "layout.njk" %}



{% block content %}

    <div class="main__content">
        <div class="container">
            {#        <!-- хлебные крошки  -->#}
            <div class="catalog">
                <div class="catalog__filters">
                    <ul class="catalog__filters-item">
                        {% for category in categories %}
                            <li><a href="/catalog/{{ category.id }}"> {{ category.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                <!-- Catalog bar -->
                <div class="catalog__bar">

                    {% for product in products %}
                        <div class="catalog__item">
                            <div class="item__img">
                                <img src=" {{ product.mURL }}">
                            </div>

                            <div class="item__info">
                                <div class="item__name">
                                    <a href="#">{{ product.name }}</a>
                                </div>
                                <div class="item__price-container">
                                    <div class="item__price">
                                        <span><span class="price">{{ product.price }} </span>руб</span>
                                    </div>
                                    <a class="item__to-basket" title="Положить в корзину">
                                        <i class="fas fa-shopping-cart"></i>
                                    </a>
                                    <a class="item__to-favorite" title="Избранное">
                                        <i class="fas fa-heart"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}


                </div>


            </div>
        </div>
    </div>





    {##}
{% endblock %}


