{% block main_profile %}
    <h3 class="section-title">Заказы</h3>
    <div class="orders-list">
        {% for order in orders %}
            <div class="orders-item">
                <div class="item-header">
                    <div class="item-block">
                        <h3 class="item-title">
                            Заказ от {{ order.dataCreated }}
                        </h3>
                        <a class="item-number" href="/profile/orderItem/{{ order.id }}" data-orderId="{{ order.id }}" onclick = "sendIdOrder (this)">0000-00{{ order.id }}</a>
                    </div>
                    <div class="item-block">
                        <h3 class="item-title total-order">
                            {{ order.totalOrder | addPennies }}
                        </h3>
                        <span class="status-pay">
{#                            {оплачено/к оплате}#}
                        {% if order.methodPay === "cardOnline" %}
