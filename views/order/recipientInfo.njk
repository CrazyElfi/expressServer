<div class="content user_info">
    {% if user %}
    <div class="user_info-name">
        <div class="title" id="nameCustomer">{{ session.user.username }}</div>
        <a class="link" href="/profile/edit">Редактировать</a>
    </div>
    {% else %}

    <h3>
        Новый пользователь
    </h3>
    <form onchange="registerNewUser()">

{#        {% set className = "test" %}#}
        {% if newUser.name.status == 'ok' %}
            {% set className = "done-input" %}
        {% elseif  newUser.name.status == 'error' %}
            {% set className = "error-input" %}
        {% endif %}
        <div class="row {{ className }}">
            <label>Имя</label>
            <input class="input-field" id="name" type="text" placeholder="Иван" data-user="newUser"
                   value="{{ newUser.name.firstname }}">
        </div>

        {% if newUser.lastname.status == 'ok' %}
            {% set className = "done-input" %}
        {% elseif  newUser.lastname.status == 'error' %}
            {% set className = "error-input" %}
        {% endif %}
        <div class="row {{ className }}">
            <label>Фамилия</label>
            <input class="input-field" id="lastname" type="text" placeholder="Иванов" data-user="newUser"
                   value="{{ newUser.lastname.lastname }}">
        </div>

        {% set className = "test" %}
        {% if newUser.phone.status == 'ok' %}
            {% set className = "done-input" %}
        {% elseif  newUser.phone.status == 'error' %}
            {% set className = "error-input" %}
        {% endif %}
        <div class="row {{ className }}">
            <label>Телефон</label>
            <input class="input-field" id="phone" type="text" placeholder="+79008007060" data-user="newUser"
                   value="{{ newUser.phone.number }}">
        </div>

        {% set className = "test" %}
        {% if newUser.mail.status == 'ok' %}
            {% set className = "done-input" %}
        {% elseif  newUser.mail.status == 'error' %}
            {% set className = "error-input" %}
        {% endif %}
        <div class="row {{ className }}">
            <label>Почта</label>
            <input class="input-field" id="mail" type="email" name="mail" placeholder="email@mail.com"
                   data-user="newUser" value="{{ newUser.mail.mail }}">
        </div>

</form>

{% endif %}
<div class="add-recipient" id="add-recipient">
    <a class="link" href="#" onclick="addRecipient ()">
        Добавить получателя
    </a>
    <div class="explanations">
        Добавьте получателя, если вы покупаете не для себя, или хотите, чтобы товар забрал
        другой
        человек.
    </div>
    <form class="displayNone" id="new-recipient" onchange="addDataRecipient ()">

        {% set className = "test" %}
        {% if newRecipient.name.status == 'ok' %}
            {% set className = "done-input" %}
        {% elseif  newRecipient.name.status == 'error' %}
            {% set className = "error-input" %}
        {% endif %}
        <div class="row {{ className }}">
            <label>Имя</label>
            <input class="input-field" id="recipient-name" type="text" placeholder="Имя"
                   value="{{ newRecipient.name.firstname }}">
        </div>

        {% set className = "test" %}
        {% if newRecipient.lastname.status == 'ok' %}
            {% set className = "done-input" %}
        {% elseif  newRecipient.lastname.status == 'error' %}
            {% set className = "error-input" %}
        {% endif %}
        <div class="row {{ className }}">
            <label>Фамилия</label>
            <input class="input-field" id="recipient-lastname" type="text" placeholder="Фамилия" value="{{ newRecipient.lastname.lastname }}">
        </div>

        {% set className = "test" %}
        {% if newRecipient.phone.status == 'ok' %}
            {% set className = "done-input" %}
        {% elseif  newRecipient.phone.status == 'error' %}
            {% set className = "error-input" %}
        {% endif %}
        <div class="row {{ className }}">
            <label>Телефон</label>
            <input class="input-field" id="recipient-phone" type="text" placeholder="Телефон" value="{{ newRecipient.phone.number }}">
        </div>

    </form>
</div>
</div>
