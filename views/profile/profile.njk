{% extends "./layout.njk" %}

{% block main_profile %}
<div class="row">
    <div class="col-md-8 border mx-auto">
        <h5 class="col-12 p-2">Профиль пользователя</h5>
        <ul class="list-unstyled">
            <li class="col-10 pb-2">
                <span class="col-4 font-weight-bold">Имя: </span>
                {{ user.name}}
            </li>
            <li class="col-10 pb-2">
                <span class="col-4 font-weight-bold">Фамилия: </span>
                {{ user.lastname}}
            </li>
            <li class="col-10 pb-2">
                <span class="col-4 font-weight-bold">E-mail: </span>
                {{ user.email}}
            </li>
            <li class="col-10 pb-2">
                <span class="col-4 font-weight-bold">Phone: </span>
                {{ user.phone}}
            </li>
            <li class="col-10 pb-2">
                <span class="col-4 font-weight-bold">City: </span>
                {{ user.city}}
            </li>
            <li class="col-10 pb-2">
                <span class="col-4 font-weight-bold">Country: </span>
                {{ user.country}}
            </li>
            <li class="col-10 pb-2">
                <span class="col-4 font-weight-bold">Address: </span>
                {{ user.adress}}
            </li>
        </ul>
    </div>
    <div class="col-md-3">
        <div class="p-1 border">
            <div class="avatar ">
                <img class="rounded-circle mx-auto d-block" alt="" src="http://placehold.it/100x100" class="img-fluid"/>
            </div>
        </div>
    </div>
</div>

{% endblock %}
